#include <stdio.h>
#include <stdlib.h>
#include <stdbool.h>
#include <locale.h>

int main()
{

    setlocale(LC_ALL, "portuguese");

    //VARIÁVEIS INTEIRAS
    {
    //declarando variável inteira
    int a = 5, b;

    //lendo variável inteira
    printf("Digite um valor INTEIRO para b: ");
    scanf("%d", &b);

    //imprimindo variável inteira
    printf("\nO valor INTEIRO de A declarado na variável é: %d e o valor INTEIRO de B inserido pelo usuário é: %d", a,b);
    printf("\n\n");
    }

    //VARIÁVEIS REAIS (FLOAT)
    {
    //declarando variável tipo FLOAT (REAL)
    float a = 1.5, b;

    //lendo variável real (float) com 2 casas decimais (%.2f)
    printf("Digite um valor REAL para b: ");
    scanf("%f", &b);

    //imprimindo variável tipo real (FLOAT) com 2 casas decimais (%.2f)
    printf("\nO valor REAL de A declarado na variável é: %.2f e o valor REAL de B inserido pelo usuário é: %.2f", a,b);
    printf("\n\n");
    }

    //VARIÁVEL BOLEANA
    {
    bool a = true, b; //true para verdadeiro = 1 e false para falso = 0

    //lendo variável boleana na verdade ela le como inteiro
    printf("Digite um valor boleano para b: ");
    scanf("%d", &b); //pode digitar true ou false

    //imprimindo variável tipo boleana como inteiro
    printf("\nO valor Boleano de A declarado na variável é: %d e o valor Boleano de B inserido pelo usuário é: %d", a,b);
    printf("\n\n");

    }




   system("pause");
    return 0;
}
